{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "server_app",
      "host": {
        "sourcePath": "/var/app/current/server/."
      }
    },
    {
      "name": "client_app",
      "host": {
        "sourcePath": "/var/app/current/client/."
      }
    },
    {
      "name": "nginx_conf",
      "host": {
        "sourcePath": "/var/app/current/compose/production/nginx/conf.d"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "api",
      "image": "jayturn/node-server:1.3.4",
      "command": ["yarn", "start:staging"],
      "essential": true,
      "memoryReservation": 512,
      "portMappings": [
        {
          "hostPort": 9000,
          "containerPort": 9000
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "server_app",
          "containerPath": "/server/app"
        }
      ]
    },
    {
      "name": "client",
      "image": "jayturn/react:1.2.7",
      "command": ["yarn", "start:staging"],
      "essential": true,
      "memoryReservation": 512,
      "portMappings": [
        {
          "hostPort": 3000,
          "containerPort": 3000
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "client_app",
          "containerPath": "/client/app"
        }
      ]
    },
    {
      "depends_on": [
        "api",
        "client"
      ],
      "essential": true,
      "image": "nginx:1.19.0-alpine",
      "links": [
        "api",
        "client"
      ],
      "memoryReservation": 128,
      "mountPoints": [
        {
          "sourceVolume": "nginx_conf",
          "containerPath": "/etc/nginx/nginx.conf"
        }
      ],
      "name": "nginx",
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ]
    }
  ]
}
