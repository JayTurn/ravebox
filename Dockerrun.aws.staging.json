{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "server",
      "host": {
        "sourcePath": "/var/app/current/server/."
      }
    },
    {
      "name": "server_modules",
      "host": {
        "sourcePath": "/var/app/current/server/node_modules"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "node_server",
      "image": "jayturn/node-server:1.2.0",
      "command": ["yarn", "start:staging"],
      "essential": true,
      "memoryReservation": 1024,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 9000
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "server",
          "containerPath": "/server/app",
          "readOnly": true
        },
        {
          "sourceVolume": "server_modules",
          "containerPath": "/server/node_modules"
        }
      ]
    }
  ]
}
