{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "server",
      "host": {
        "sourcePath": "/var/app/current/server/."
      }
    },
    {
      "name": "client",
      "host": {
        "sourcePath": "/var/app/current/client/."
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "node_server",
      "image": "jayturn/node-server:1.3.1",
      "command": ["yarn", "start:staging"],
      "essential": true,
      "memoryReservation": 384,
      "portMappings": [
        {
          "hostPort": 9000,
          "containerPort": 9000
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "server",
          "containerPath": "/server/app"
        }
      ]
    },
    {
      "name": "react_client",
      "image": "jayturn/react:1.2.1",
      "command": ["yarn", "start:staging"],
      "essential": true,
      "memoryReservation": 384,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 3000
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "client",
          "containerPath": "/client/app"
        }
      ]
    }
  ]
}
