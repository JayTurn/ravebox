{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "server",
      "host": {
        "sourcePath": "/server"
      }
    },
    {
      "name": "server_modules",
      "host": {
        "sourcePath": "/server/node_modules"
      }
    },
    {
      "name": "react",
      "host": {
        "sourcePath": "/client"
      }
    },
    {
      "name": "react_modules",
      "host": {
        "sourcePath": "/client/node_modules"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "node_server",
      "image": "jayturn/node-server:1.2.0",
      "command": ["yarn", "start:staging"],
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "server",
          "containerPath": "/server/app",
          "readOnly": true
        },
        {
          "sourceVolume": "server_modules",
          "containerPath": "/server/node_modules"
        }
      ]
    },
    {
      "name": "react_client",
      "image": "jayturn/react:1.1.0",
      "command": ["yarn", "start:staging"],
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "node_server"
      ],
      "mountPoints": [
        {
          "sourceVolume": "react",
          "containerPath": "/client/app",
          "readOnly": true
        },
        {
          "sourceVolume": "react_modules",
          "containerPath": "/client/node_modules"
        }
      ]
    }
  ]
}
